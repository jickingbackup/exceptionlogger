@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
</head>
<body ng-app="mainApp" ng-init="count = [1,2,3,4,5]">
    <div class="container" style="max-width:660px;" ng-controller="searchController">
        <div class="row" >
            <div class="col-md-12 well">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Keywords" aria-describedby="basic-addon2" ng-model="searchkeyword">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" ng-click="Search()">Search</button>
                    </span>
                </div>
                <p class="text-muted"> searching for {{searchkeyword}}</p>
            </div>
        </div>
        <div class="row">

            <section class="col-md-12" ng-repeat = "item in results">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{item.id}}</h3>
                    </div>
                    <div class="panel-body">
                        {{item.exception}}
                    </div>
                    <div class="panel-footer">
                        <div class="text-left pull-left">
                            <span class="btn-group btn-group-xs" role="group" aria-label="...">
                                <small>{{item.server}}-({{item.ip}}) {{item.browser}}</small>
                            </span>
                        </div>

                        <div class="text-right pull-right">
                            <span class="btn-group btn-group-xs" role="group" aria-label="...">
                                @*<button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#mini-modal" ng-click="Notify('xxx')">Notify</button>*@
                                <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#mini-modal" ng-click="Select(item.id)">Details</button>
                                <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#mini-modal" ng-click="Select(item.id)">Edit</button>
                                <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#mini-modal" ng-click="Select(item.id)">Delete</button>
                            </span>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </section>

            <section class="col-md-12">
                <p class="text-center"> 9999 results</p>
            </section>
        </div>
        <div class="row">
            <hr />
            <p class="text-center"> XXX APPS </p>
        </div>
        @* MODALS / TEMPLATES *@
        <div id="mini-modal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">{{selectedExceptionLog.id}}</h4>
                    </div>
                    <div class="modal-body">
                        {{selectedExceptionLog.exception}}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* BOOTSTRAP START *@
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>*@
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.signalR-2.1.2.js"></script>
    <script src="/signalr/hubs"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/Scripts/bootstrap.js"></script>
    
    @* ANGULARJS START *@
    @* INCLUDE LIBRARY *@
    @*<script src="~/Scripts/angular.min.js"></script>*@
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    @* INCLUDE SERVICES *@
    @* INCLUDE CONTROLLERS *@
    <script src="~/Scripts/angular-services/exceptionlogsService.js"></script>
    <script src="~/Scripts/angular-controllers/SearchController.js"></script>

    <script>
        var app = angular.module('mainApp', []);
        app.service('exceptionLogsService', exceptionLogsService);
        app.controller('searchController', searchController);
    </script>
</body>
</html>

